<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Profile</title>
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="/asset/css/buyerProfile.css">
        <link
        rel="stylesheet" type="text/css" href="/asset/css/navbar.css">

        <!-- importing icons from awesomefont website-->
        <link
        rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"/>
        <!-- Favicon -->
        <link rel="shortcut icon" href="/img/favicon.png" type="image/png">


    </head>
    <body>

        <!-- header -->
        <%- include('./partials/nav-bar.ejs') %>


        <section class="py-5 my-5">
            <div class="container">
                <h1 class="mb-5">Profile Settings</h1>
                <div
                    class="bg-white shadow rounded-lg d-block d-sm-flex">
                    <!-- side bar section-->
                    <div class="profile-tab-nav border-right">
                        <div class="p-4">
                            <div class="img-circle text-center mb-3">
                                <img src="/img/sun1.png" alt="Image">
                            </div>
                            <h4 class="text-center"><%= buyer.name%></h4>
                        </div>
                        <!-- side bar navs-->
                        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="account-tab" data-toggle="pill" href="#account" role="tab" aria-controls="account" aria-selected="true">
                                <i class="fa fa-home text-center mr-1"></i>
                                Profile
                            </a>


                        </div>
                    </div>
                    <% if(typeof error !== 'undefined' && error.length >= 1){%>
                        <div class="error" style="color:#54a18a; padding:10px;">
                            <p> <%= error %> </p>
                          </div>
                          <% } %>
                    <form action="/profile/edit" method="POST">
                        <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">
                                <h3 class="mb-4">Profile</h3>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input required type="text" name="name" class="form-control" value="<%= buyer.name%>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input required type="email" name="email" class="form-control" value="<%= buyer.email%>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Phone Number</label>
                                            <input required type="text" name="phone" class="form-control" value="<%= buyer.phone%>" pattern="05[0-9]{8}">
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" id="submit-button" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </section>


       
    </body>
</html>
