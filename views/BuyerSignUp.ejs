<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/asset/css/buyerSignUp.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-cH+JJFxtPw/20y19BCgwJlzfnEBxKj+1zsjZmFgX9rU6rH+ZOgmYfAf1nU2cqvx4NzV7xwjQ/YXzV7CE+J/5Fg==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Barlow:wght@200;300;500;900 &display=swap');
        </style>
        <!-- importing icons from awesomefont website-->
        <link
        rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"/>
        <!-- Favicon -->
        <link rel="shortcut icon" href="/img/favicon.png" type="image/png">
    </head>
    <body>
        <div class="splitscreen">

            <div class="left">
                <form id="signup-form" action="/signup" method="post">
                    <section
                        class="copy">
                        <!-- sign up as a buyer -->
                        <h1>Sign Up</h1>
                        <p>There are many sellers waiting to showcase their products!<br>
                            Join the Local Hub community and shop now!</p>


                    </section>
                    <% if(error.length >= 1){%>
                        <div class="email error" style="color:#54a18a;">
                           <p> <%= error%> </p>
                        </div>
                        <% } %>
                    <div class="input-container name">
                        <label for="fname">Full Name</label>
                        <input required id="fname" name="name" type="text" placeholder="First and Last Name">
                    </div>
                    <div class="input-container email">
                        <label for="email">Email:</label>
                        <input
                        required id="email" name="email" type="text" placeholder="">
                        <!-- THE ERROR WILL BE DISPLAYED UNDER HERE-->
                        <!-- error length to check the error exixts  -->
                        
                    </div>
                    <div class="input-container phoneNum">
                        <label for="phoneNum">Phone Number</label>
                        <input
                        required id="phoneNum" name="phone" type="text" placeholder="05xxxxxxxx" placeholder="05xxxxxxxx" pattern="05[0-9]{8}" maxlength="10">
                        <!-- THE ERROR WILL BE DISPLAYED UNDER HERE-->
                        <div class="phone error"></div>
                    </div>
                    <div class="input-container password">
                        <label for="password">Password:</label>
                        <input
                        required id="password" name="password" type="password" placeholder="Must be at least 6 characters" >
                        <i class="fa fa-eye-slash" style="margin-left: 350px; cursor: pointer; color: #3e7967;"></i>
                        <!-- THE ERROR WILL BE DISPLAYED UNDER HERE-->
                        <div id="password-error" class="error"> </div>
                        

                        <!-- to reveal password when clicking on the eye icon-->
                        <script>
                            const passwordField = document.getElementById('password');
                            const eyeIcon = document.querySelector('.fa-eye-slash');

                            eyeIcon.addEventListener('click', () => {
                                if (passwordField.type === 'password') {
                                    passwordField.type = 'text';
                                    eyeIcon.classList.remove('fa-eye-slash');
                                    eyeIcon.classList.add('fa-eye');
                                } else {
                                    passwordField.type = 'password';
                                    eyeIcon.classList.remove('fa-eye');
                                    eyeIcon.classList.add('fa-eye-slash');
                                }
                            });
                        </script>

                    </div>
                    <button class="signup-btn" id="submit-button">Sign Up</button>
                    <section class="copy legal ">
                        <p>
                            <span class="small">
                                By signing up you agree to our
                                <a href="#">Terms & Conditions</a>
                            </span>
                        </p>
                        <p>Are you a Seller?<a href="/seller/signup">
                                Sign Up here!
                            </a>
                        </p>
                    </section>


                    <div
                        class="login-container"><!-- <p>Already have an account?<a href="/signin"> Sign in here! </a></p> -->
                    </div>
                </form>


            </div>
            <div class="right">
                <!-- <section class="copy">
                    <img src="/img/buyerSignUp.png" alt="">
                </section> -->
            </div>
        </div>

        <script>
            // to validate the email
            function validateEmail() {
                const email = document.getElementById("email").value;
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

                if (! emailRegex.test(email)) {
                    alert("Please enter a valid email address");
                    return false;
                }

                return true;
            }
            
            // to validate the password
            const submitButton = document.getElementById("submit-button");
            submitButton.addEventListener("click", validatePassword);

            function validatePassword(event) {
                const passwordInput = document.getElementById("password");
                const password = passwordInput.value;

                if (! password || password.length < 8) {
                    event.preventDefault();
                    alert("Password must be at least 8 characters long.");
                }
            }
            // if email isn't in valid format, dont sign in
            document.getElementById("submit-button").addEventListener("click", function (event) {
                if (! validateEmail()) {
                    event.preventDefault();
                }
            });
            
            // to check if the email already exists in
           
        </script>
    </body>
</html>
