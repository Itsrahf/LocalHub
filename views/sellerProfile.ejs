<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Seller Profile</title>
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="/asset/css/sellerprofile.css">
        <link
        rel="stylesheet" type="text/css" href="/asset/css/navbar.css">

        <!-- importing icons from awesomefont website-->
        <link
        rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"/>
        <!-- Favicon -->
        <link rel="shortcut icon" href="/img/favicon.png" type="image/png">
    </head>
    <body>
        <!-- Deema -->


        <%- include('./partials/nav-bar.ejs') %>


        <section class="py-5 my-5">
            <div class="container">
                <h1 class="mb-5">Profile Settings</h1>
                <div class="bg-white shadow rounded-lg d-block d-sm-flex">
                    <div class="profile-tab-nav border-right">
                        <div class="p-4">
                            <div class="img-circle text-center mb-3">
                                <img src="/uploads/<%= seller.brandLogo %>" alt="Image">
                            </div>
                            <h4 class="text-center"><%= seller.brandName.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ') %></h4>
                        </div>
                    </div>

                        <% if(typeof error !== 'undefined' ){%>
                        <div class="error" style="color:#54a18a; padding:10px;">
                            <p> <%= error %> </p>
                          </div>
                          <% } %>
                          
                   <form action="/seller/profile/edit" method="POST">
                        <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">
                            <div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">
                                <h3 class="mb-4">Profile</h3>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group" >
                                            <label>Brandname</label>
                                            <p style="background-color: rgb(220, 216, 222);" class="form-control"><%= seller.brandName.split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join(' ')%></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Maroof Licence</label>
                                            <p type="text" name="maroofLicense" class="form-control" style="background-color: rgb(220, 216, 222);"><%= seller.maroofLicense%></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Phone Number</label>
                                            <p maxlength="10"  style="background-color: rgb(220, 216, 222);" class="form-control" > <%= seller.sellerPhone%></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" name="sellerEmail" class="form-control" value="<%= seller.sellerEmail%>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Instagram</label>
                                            <input type="text" name="instagram" class="form-control" value="<%= seller.instagram%>">
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Snapchat</label>
                                            <input type="text" name="snapchat" class="form-control" value="<%= seller.snapchat%>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Tiktok</label>
                                            <input type="text" name="tiktok" class="form-control" value="<%= seller.tiktok%>">
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </body>
    </body>
</html>
