<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/asset/css/buyerSignUp.css">
        <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Barlow:wght@200;300;500;900 &display=swap');
        </style>
        <!-- importing icons from awesomefont website-->
        <link
        rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"/>
        <!-- Favicon -->
        <link rel="shortcut icon" href="/img/favicon.png" type="image/png">


    </head>
    <body>
        <div class="splitscreen">

            <div class="left" style="margin-top:50px">
                <form action="" method="post" style="position: 0px -20px;">
                    <section
                        class="copy">
                        <!-- sign up as a buyer -->
                        <h1>Sign in</h1>
                        <p>
                            Welcome back to the Local Hub community!</p>


                    </section>

                    <div class="input-container email">
                        <label for="email">Email:</label>
                        <input required id="email" name="email" type="text" placeholder="">
                        <div class="email error"></div>
                    </div>

                    <div class="input-container password">
                        <label for="password">Password:</label>
                        <input required id="password" name="password" type="password" placeholder="Must be at least 6 characters">
                        <i class="fa fa-eye-slash" style="margin-left: 350px; cursor: pointer; color: #3e7967;"></i>
                        <div class="password error"></div>
                    </div>
                    <!-- type="submit" -->
                    <button class="signup-btn">Sign in</button>
                    <section class="copy legal ">
                        <p>
                            <span class="small">
                                By signing in you agree to our
                                <a href="#">Terms & Conditions</a>
                            </span>
                        </p>
                        <p>Don't have an account?<a href="/signup">
                                Sign up here!
                            </a>
                        </p>
                        <p>Ready to sell?
                            <a href="/seller/signup">
                                Sign up as a seller!
                            </a>
                        </p>
                    </section>

                    <div class="login-container"></div>
                </form>


            </div>
            <div class="right"></div>
        </div>

        <!-- So they can view their password -->
        <script>
            const passwordField = document.getElementById('password');
            const eyeIcon = document.querySelector('.fa-eye-slash');

            eyeIcon.addEventListener('click', () => {
                if (passwordField.type === 'password') {
                    passwordField.type = 'text';
                    eyeIcon.classList.remove('fa-eye-slash');
                    eyeIcon.classList.add('fa-eye');
                } else {
                    passwordField.type = 'password';
                    eyeIcon.classList.remove('fa-eye');
                    eyeIcon.classList.add('fa-eye-slash');
                }
            });
        </script>

    </body>
</html>
